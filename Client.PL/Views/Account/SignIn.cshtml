@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="SignIn">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text"asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text w3lpass">
				<label class="anim">
					<input type="checkbox" asp-for="RemmeberMe" class="checkbox" >
					<span>Remmeber Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>You Dont Have Account? <a asp-action="SignUp">Register Now!</a></p>
	</div>
</div>

