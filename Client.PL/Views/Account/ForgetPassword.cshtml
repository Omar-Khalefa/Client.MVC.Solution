@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="SendResetPasswordEmail">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="Send Email">
		</form>
		<p>You Dont Have Account? <a asp-action="SignUp">Register Now!</a></p>
		<p><a asp-action="ForgetPassword">Forget Password!</a></p>
	</div>
</div>

